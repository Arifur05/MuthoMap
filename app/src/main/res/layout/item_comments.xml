<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:elevation="4dp"
	app:cardCornerRadius="4dp"
	app:cardBackgroundColor="@color/white"
	app:contentPadding="3dp"
	app:cardUseCompatPadding="true">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/commenters_photo"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:padding="4dp"
			android:src="@drawable/ic_default_face1"
			app:civ_border_color="#FF000000"
			app:civ_border_width="2dp"
			tools:ignore="VectorDrawableCompat" />

		<TextView
			android:id="@+id/commenters_Name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="6dp"
			android:layout_toRightOf="@id/commenters_photo"
			android:padding="4dp"
			android:text="Name"
			android:textColor="#000"
			android:textSize="18sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/commenters_comment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/commenters_Name"
			android:layout_marginStart="6dp"
			android:layout_toRightOf="@id/commenters_photo"
			android:padding="4dp"
			android:text="Comment"
			android:textColor="#000"
			/>
		<TextView
			android:id="@+id/timeTV"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/commenters_comment"
			android:layout_marginStart="6dp"
			android:layout_toRightOf="@id/commenters_photo"
			android:padding="4dp"
			android:text="12/06/2019"
			android:textColor="#000"
			/>
	</RelativeLayout>
</androidx.cardview.widget.CardView>